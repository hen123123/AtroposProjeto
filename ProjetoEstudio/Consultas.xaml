<Page x:Class="ProjetoEstudio.Consultas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetoEstudio"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Consultas">

    <Grid>
        <!-- Estilo para o Calendário escuro -->
       
        <!-- Estilo para ComboBox escuro -->
      
        <!-- Estilo para botões de horário -->
        
        <!-- Estilo para o botão de agendar -->
       
            <!-- Fundo com efeito de blackwork (gradiente linear) -->
            <Rectangle Fill="#FF000000"/>
            <Rectangle>
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF000000" Offset="0"/>
                        <GradientStop Color="#FF111111" Offset="0.5"/>
                        <GradientStop Color="#FF000000" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <!-- Conteúdo principal -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20" Width="600">
                    <!-- Título da página -->
                    <TextBlock Text="Agendar Consulta" FontSize="32" FontFamily="Impact" Foreground="#FFFFFFFF" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                    <!-- Calendário para seleção de data -->
                    <TextBlock Text="Selecione a Data" Foreground="#FFCCCCCC" Margin="0,0,0,10"/>
                    <Calendar x:Name="CalendarAgendamento"/>

                    <!-- Seleção de Funcionário -->
                    <TextBlock Text="Selecione o Especialista" Foreground="#FFCCCCCC" Margin="0,0,0,10"/>
                    <ComboBox x:Name="CboFuncionarios">
                        <ComboBoxItem Content="Especialista em Suminagashi"/>
                        <ComboBoxItem Content="Especialista em Blackwork"/>
                        <ComboBoxItem Content="Especialista em Dark Ornamental"/>
                    </ComboBox>

                    <!-- Horários Disponíveis -->
                    <TextBlock Text="Horários Disponíveis" Foreground="#FFCCCCCC" Margin="0,0,0,10"/>
                    <WrapPanel x:Name="WrapHorarios" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                        <!-- Exemplos de horários (popule dinamicamente no code-behind) -->
                        <Button Content="09:00" Click="BtnHorario_Click"/>
                        <Button Content="10:00" Click="BtnHorario_Click"/>
                        <Button Content="11:00" Click="BtnHorario_Click" IsEnabled="False"/>
                        <!-- Exemplo de horário indisponível -->
                        <Button Content="14:00"  Click="BtnHorario_Click"/>
                        <Button Content="15:00"  Click="BtnHorario_Click"/>
                        <Button Content="16:00"  Click="BtnHorario_Click"/>
                    </WrapPanel>

                    <!-- Botão para Agendar -->
                    <Button x:Name="BtnAgendar" Content="Agendar Consulta"/>

                    <!-- Link para voltar -->
                    <TextBlock Text="Voltar ao Hub" Foreground="#FFCCCCCC" HorizontalAlignment="Center" 
                           Margin="0,20,0,0" Cursor="Hand" MouseLeftButtonDown="TxtVoltar_MouseLeftButtonDown"/>
                </StackPanel>
            </ScrollViewer>

        </Grid>
</Page>
