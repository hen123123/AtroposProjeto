<Window x:Class="ProjetoEstudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoEstudio"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <!-- Gradiente para simular efeito de tinta preta (suminagashi) -->
        <RadialGradientBrush x:Key="InkGradient" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
            <GradientStop Color="#FF000000" Offset="0"/>
            <GradientStop Color="#FF333333" Offset="0.5"/>
            <GradientStop Color="#FF000000" Offset="1"/>
        </RadialGradientBrush>
    </Window.Resources>
    <Grid Background="{StaticResource InkGradient}">
        <!-- Frame para navegação entre páginas -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Source="Home.xaml"></Frame>
    </Grid>
</Window>
