<Page x:Class="ProjetoEstudio.Loginpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetoEstudio"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Loginpage">
    <!--INICIO PAGE-->
    <Page.Resources>
        <!-- Estilo para TextBoxes escuros -->
        <Style x:Key="DarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF222222"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="BorderBrush" Value="#FF666666"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <!-- Estilo para PasswordBox -->
        <Style x:Key="DarkPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#FF222222"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="BorderBrush" Value="#FF666666"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Page.Resources>
        <!--FINALPAGERESOUCE-->

    <Grid>
        <!-- Fundo com efeito de blackwork (gradiente linear) -->
        <Rectangle Fill="#FF000000"/>
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF000000" Offset="0"/>
                    <GradientStop Color="#FF111111" Offset="0.5"/>
                    <GradientStop Color="#FF000000" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Conteúdo -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Margin="20">
            <!-- Título -->
            <TextBlock Text="Login" FontSize="32" FontFamily="Segoe UI Black" Foreground="#FFFFFFFF" 
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>
            <!-- Campo Nome de Usuário -->
            <TextBlock Text="Nome de Usuário" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtUsername" Style="{StaticResource DarkTextBoxStyle}" Margin="0,0,0,20"/>

            <!-- Campo Senha -->
            <TextBlock Text="Senha" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PwdPassword" Style="{StaticResource DarkPasswordBoxStyle}" Margin="0,0,0,30"/>

            <!-- Botão Entrar -->
             <!--<Button x:Name="BtnEntrar" Content="Entrar" Background="#FF333333" Foreground="#FFFFFFFF" 
                    FontSize="16" Padding="10" BorderBrush="#FF666666" BorderThickness="2" 
                    HorizontalAlignment="Center" Click="BtnEntrar_Click"/> -->

            <!-- Link para voltar -->
            <!--<TextBlock Text="Voltar à Homepage" Foreground="#FFCCCCCC" HorizontalAlignment="Center" 
                       Margin="0,20,0,0" Cursor="Hand" MouseLeftButtonDown="TxtVoltar_MouseLeftButtonDown"/> -->
        </StackPanel>
    </Grid>
</Page>