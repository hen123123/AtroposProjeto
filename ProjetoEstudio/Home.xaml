<Page x:Class="ProjetoEstudio.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetoEstudio"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">
    
    <Page.Resources>
        <!-- Estilo para botões escuros com efeito de sombra -->
        <Style x:Key="DarkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI Black"/>
            <Setter Property="BorderBrush" Value="#FF666666"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF000000" BlurRadius="5" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF555555"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Fundo com padrão de darkornamental (simulado com vetores) -->

        <!-- Conteúdo principal -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <!-- Nome do estúdio -->
            <TextBlock Text="Dark Ink Studio" FontSize="48" FontFamily="Impact" Foreground="#FFFFFFFF" 
                       HorizontalAlignment="Center" Margin="0,0,0,50"/>

            <!-- Descrição sutil -->
            <TextBlock Text="Especialistas em Blackwork, Suminagashi e Dark Ornamental" FontSize="18" Foreground="#FFCCCCCC" 
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <!-- Botões -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="BtnLogin" Content="Login" Style="{StaticResource DarkButtonStyle}" Margin="0,0,20,0" 
                        Click="BtnLogin_Click"/>
                <Button x:Name="BtnCadastro" Content="Cadastro" Style="{StaticResource DarkButtonStyle}" 
                        Click="BtnCadastro_Click"/>
            </StackPanel>

            <!-- Elemento decorativo: Ícone de tatuagem -->
        </StackPanel>
    </Grid>
</Page>